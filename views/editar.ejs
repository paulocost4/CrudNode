<!DOCTYPE html>
<html lang="en">
  <head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
  
  <style>

    .input{
      width: 360px;
      height: 20px;
      margin: 5px;
      justify-content: center;
      align-items: center;
    }
    .container{
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #36363325;
      width: 500px;
      height: 800px;
    }
    .areaInput{
      display: flex;
      justify-content: center;
      align-items: center;
    }
    textarea{
      height: 120px;
      width: 360px;
    }
    .button{
      display: flex;
      justify-content: center;
      
    }
    button{
      width: 120px;
      height: 20;
      border-radius: 5px;
      background-color: #fff;
    }
    .select{
      height: 20px;
      width: 180px;
    }
    .radioArea{
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .selectArea{
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
  </style>
</head>
<body >
  
  
  <div class="container">
    
    <div class="areaInput">
      
      <% data.forEach(function(details) { %>
        <form action="/editar/<%=details._id%>" method="POST">
        <h1 style="text-align: center;">Editar</h1><br/>
        <input class="input" type="text" placeholder="Nome" name="name" value="<%= details.name %>" ><br/>
        <input class="input" type="text" placeholder="Sobrenome" name="surname" value="<%= details.surname %>" ><br/>
        <input class="input" type="email" placeholder="Email" name="email" value="<%= details.email %>" ><br/>
        <input class="input" type="text" placeholder="CPF" name="cpf" value="<%= details.cpf %>" ><br/>
        <input class="input" type="text" placeholder="Numero celular" name="celular" value="<%= details.celular %>" ><br/>
        <input class="input" type="number" placeholder="Idade" name="idade" value="<%= details.idade %>" ><br/>
        <input class="input" type="number" placeholder="Peso" name="peso" value="<%= details.peso %>" ><br/>
        <div class="selectArea">
          <p>Escolha o tipo de exercicio &nbsp</p>
          <select class="select" name="exercicio">
            <option value="">Exercicio</option>
            <option <%= (details.exercicio == 'Musculaçao' ? 'selected' : '' ) %> value="Musculaçao">Musculaçao</option>
            <option <%= (details.exercicio == 'Zumba' ? 'selected' : '' ) %> value="Zumba">Zumba</option>
            <option <%= (details.exercicio == 'Crossfit' ? 'selected' : '' ) %> value="Crossfit">Crossfit</option>
            <option <%= (details.exercicio == 'Aerobico' ? 'selected' : '' ) %> value="Aerobico">Aerobico</option>
          </select><br/>
        </div>
        <div class="radioArea">
          <label for="">Sexo: </label>
          <input <%= (details.genero == 'masculino' ? 'checked' : '' ) %> type="radio" id="male" name="genero" value="masculino">
          <label for="male">Masculino</label><br>
          <input <%= (details.genero == 'feminino' ? 'checked' : '' ) %> type="radio" id="female" name="genero" value="feminino">
          <label for="female">Feminino</label><br>
          <input <%= (details.genero == 'outro' ? 'checked' : '' ) %> type="radio" id="other" name="genero" value="outro">
          <label for="other">Outro</label>
        </div>
        <h4 style="text-align: center;">Observação</h1>
          <textarea name="msg" placeholder="Escreva aqui as suas Observações"> <%= details.msg %> </textarea><br><br>
          
          <div class="button">
            <button type="submit">EDITAR</button>
          </div>
          
        </form>
        <% }) %>
      </div>
    </div>
    
    
  </body>
  </html>
  
           